\newcommand{\CVentry}[5][]{
	\ifthenelse{\isempty{#4} \AND \isempty{#5}}{
		\begin{tabular}{x{\LeftColumnLength}y{\RightColumnLength}}
			\textbf{#1} & \\
			#2 & #3 \\
		\end{tabular}\\
		}{
